	"item": [
		{
			"name": "Get Translations for Survey, Language and TranslationKey",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code name has string\", function () {",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"",
							"const hasNameAndText = (setting) => {",
							"    return setting.Name !== undefined && setting.Text !== undefined;",
							"}",
							"",
							"pm.test(\"All translations should have name and text\", function () {",
							"    const translations = pm.response.json();",
							"    pm.expect(translations.every(hasNameAndText)).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Basic {{AuthenticationToken}}"
					}
				],
				"url": {
					"raw": "{{origin}}/v1/Surveys/{{SurveyId}}/Languages/{{LanguageId}}/Translations",
					"host": [
						"{{origin}}"
					],
					"path": [
						"v1",
						"Surveys",
						"{{SurveyId}}",
						"Languages",
						"{{LanguageId}}",
						"Translations"
					]
				},
				"description": "Gets a list of all script fragment names for a survey."
			},
			"response": []
		},
