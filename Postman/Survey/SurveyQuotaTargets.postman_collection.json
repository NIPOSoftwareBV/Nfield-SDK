{
	"info": {
		"_postman_id": "afd0dfad-136c-41de-a8b8-9f9e3edf2a24",
		"name": "SurveyQuotaTargets",
		"description": "A controller for querying Full QuotaFrame structure based on survey",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get QuotaTargets",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code name has string\", function () {",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"",
							"pm.test(\"All QuotaTargets should have Target and Variables\", function () {",
							"    const quotaTargets = pm.response.json();",
							"    pm.expect(quotaTargets.Target !== undefined).to.be.true;",
							"    pm.expect(quotaTargets.Variables !== undefined).to.be.true;",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/octet-stream"
					},
					{
						"key": "X-Nfield-Domain",
						"value": "{{Domain}}"
					},
					{
						"key": "Authorization",
						"value": "Basic {{AuthenticationToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{origin}}/v1/Surveys/{{SurveyId}}/QuotaTargets",
					"host": [
						"{{origin}}"
					],
					"path": [
						"v1",
						"Surveys",
						"{{SurveyId}}",
						"QuotaTargets"
					]
				},
				"description": "This method retrieves the QuotaTargets from a Survey."
			},
			"response": []
		},
		{
			"name": "Get QuotaTargets by Etag",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code name has string\", function () {",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"",
							"pm.test(\"All QuotaTargets should have Target and Variables\", function () {",
							"    const quotaTargets = pm.response.json();",
							"    pm.expect(quotaTargets.Target !== undefined).to.be.true;",
							"    pm.expect(quotaTargets.Variables !== undefined).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/octet-stream"
					},
					{
						"key": "X-Nfield-Domain",
						"value": "{{Domain}}"
					},
					{
						"key": "Authorization",
						"value": "Basic {{AuthenticationToken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{origin}}/v1/Surveys/{{SurveyId}}/QuotaTargets/{{eTag}}",
					"host": [
						"{{origin}}"
					],
					"path": [
						"v1",
						"Surveys",
						"{{SurveyId}}",
						"QuotaTargets",
						"{{eTag}}"
					]
				},
				"description": "This method retrieves the QuotaTargets for a specific ETag version."
			},
			"response": []
		}
	]
