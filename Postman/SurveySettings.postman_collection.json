{
	"info": {
		"_postman_id": "7fd55e30-a30f-4318-9d80-8cbbaa5a1664",
		"name": "SurveySettings",
		"description": "A controller for querying Survey Settings",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Survey Settings",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code name has string\", function () {",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"",
							"const hasNameAndValue = (setting) => {",
							"    return setting.Name !== undefined && setting.Value !== undefined;",
							"}",
							"",
							"pm.test(\"All survey settings should have name and value\", function () {",
							"    const settings = pm.response.json();",
							"    pm.expect(settings.every(hasNameAndValue)).to.be.true;",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/octet-stream"
					},
					{
						"key": "Authorization",
						"value": "Basic {{AuthenticationToken}}"
					}
				],
				"url": {
					"raw": "{{origin}}/v1/Surveys/{{SurveyId}}/Settings",
					"host": [
						"{{origin}}"
					],
					"path": [
						"v1",
						"Surveys",
						"{{SurveyId}}",
						"Settings"
					]
				},
				"description": "This method retrieves a list of survey Settings. This list can be filtered and sorted using standard OData syntax."
			},
			"response": []
		},
		{
			"name": "Add Survey Settings",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code name has string\", function () {",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"",
							"pm.test(\"Response contains the correct Name and Value\", function () {",
							"    const settings = pm.response.json();",
							"    pm.expect(settings.Name).to.eql(\"LocationCaptureGps\");",
							"    pm.expect(settings.Value).to.eql(\"True\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Basic {{AuthenticationToken}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"Name\": \"LocationCaptureGps\",\r\n    \"Value\": \"True\"\r\n}"
				},
				"url": {
					"raw": "{{origin}}/v1/Surveys/{{SurveyId}}/Settings",
					"host": [
						"{{origin}}"
					],
					"path": [
						"v1",
						"Surveys",
						"{{SurveyId}}",
						"Settings"
					]
				},
				"description": "This method creates a new survey Setting."
			},
			"response": []
		}
	]
}