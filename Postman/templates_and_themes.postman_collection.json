  },

  "item": [
    {
      "name": "Upload Theme",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-zip-compressed"
          },
          {
            "key": "Authorization",
            "value": "Basic {{ _.AuthenticationToken }}"
          }
        ],
        "body": {
          "mode": "file",
          "file": { "src": "/C:/PleaseSelectAFile" }
        },
        "url": {
          "raw": "{{ _.Api }}/v1/Templates/{{ _.TemplateId }}/Themes/hola.zip",
          "host": ["{{ _", "Api }}"],
          "path": [
            "v1",
            "Templates",
            "{{ _.TemplateId }}",
            "Themes",
            "hola.zip"
          ]
        },
        "auth": {}
      },
      "response": []
    },
    {
