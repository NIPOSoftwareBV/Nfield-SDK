      "request": {
        "method": "GET",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          {
            "key": "Authorization",
            "value": "Basic {{ _.AuthenticationToken }}"
          }
        ],
        "url": {
          "raw": "{{ _.Api }}/v1/Templates",
          "host": ["{{ _", "Api }}"],
          "path": ["v1", "Templates"]
        },
        "auth": {}
      },
      "response": []
    },
    {
      "name": "Download Theme",
      "request": {
