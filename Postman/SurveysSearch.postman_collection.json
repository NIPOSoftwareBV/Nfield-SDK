{
	"info": {
		"_postman_id": "320f3179-43fe-4255-bacf-96fe7d9d9f14",
		"name": "SurveysSearch",
		"description": "A controller for querying Surveys",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Respondent Surveys",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Status code name has string\", function () {",
							"    pm.response.to.have.status(\"OK\");",
							"});",
							"",
							"const hasSurveyIdAndSurveyName = (survey) => {",
							"    return survey.SurveyId !== undefined && survey.SurveyName !== undefined;",
							"}",
							"",
							"pm.test(\"All respondent surveys should have a SurveyId and SurveyName\", function () {",
							"    const surveys = pm.response.json();",
							"    pm.expect(surveys.every(hasSurveyIdAndSurveyName)).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Basic {{AuthenticationToken}}"
					}
				],
				"url": {
					"raw": "{{origin}}/v1/Surveys/Search?value=SampleDataValue",
					"host": [
						"{{origin}}"
					],
					"path": [
						"v1",
						"Surveys",
						"Search"
					],
					"query": [
						{
							"key": "value",
							"value": "SampleDataValue"
						}
					]
				},
				"description": "This method retrieve details of a specific survey."
			},
			"response": []
		}
	]
}